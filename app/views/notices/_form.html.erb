<%= form_for :notice, url: notices_path, html: {class: "form-horizontal", role: "form"} do |f| %>
  <p>
    <%= f.label :message %><br>
    <%= f.text_area :message, cols: 100, rows:3 %>
  </p>
  <p>
    <%= f.check_box :display %>
    <%= f.label :display %>
  </p>
  <%= f.submit "Save Notice", :class => "btn btn-primary" %>
<% end %>
