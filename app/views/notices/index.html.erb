<h2>List of Notices</h2>

<table class="table table-striped table-hover">
  <tr>
    <th>Notice ID</th>
    <th>Display</th>
    <th>Message</th>
    <th>Actions</th>
  </tr>

  <% @notices.each do |notice| %>
    <tr>
      <td><%= link_to notice.id.to_s, edit_notice_path(notice) %></td>
      <td><%= fa_icon "check-circle", class: "fa-2x" if notice.display %></td>
      <td><%= notice.message %></td>
      <td>
        <%= link_to 'edit', edit_notice_path(notice) %> |
        <%= link_to 'delete', notice_path(notice), data: { confirm: 'Are you sure?' }, method: :delete %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "Add Notice", new_notice_path, class: "btn btn-primary" %>
