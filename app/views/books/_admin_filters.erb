<h4>Filters</h4>
<div id="request-filters">
  <%= search_form_for @q, url: books_admin_path do |f| %>
  <div>
    <%= f.label :name_cont, 'Name' %>
    <%= f.search_field :name_cont %>

    <%= f.label :title_cont, 'Title' %>
    <%= f.search_field :title_cont %>

    <%= f.label :created_at_gteq, 'On/After' %>
    <%= f.search_field :created_at_gteq, placeholder: '2019-01-31' %>
  </div>
  <div>
    <%= f.submit "Filter", class: 'btn btn-primary' %>
    <%= link_to 'Reset', books_admin_path, class: 'btn btn-default' %>
  </div>
  <% end %>
</div>
