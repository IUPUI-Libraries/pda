<%= form_for @book, html: {class: "form-horizontal", role: "form"} do |f| %>

    <div class="form-group">
      <%= f.label :name, :class => "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => "form-control", :readonly => true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, :class => "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :email, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :title, :class => "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :title, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :utitle, :class => "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :utitle, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :purchase, :class => "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :purchase, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :pub, :class => "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :pub, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :pub_date, :class => "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :pub_date, :class => "form-control"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :isbn, :class => "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :isbn, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :iucat, :class => "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :iucat, :class => "form-control"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :ed, :class => "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :ed, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :oclc, :class => "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :oclc, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <% if params[:action] == 'new' %>
          <%= f.submit "Request Book Purchase", :class => "btn btn-primary" %>
        <% else %>
          <%= f.submit "Update Request", :class => "btn btn-primary" %>
        <% end %>
      </div>
    </div>

<% end %>
